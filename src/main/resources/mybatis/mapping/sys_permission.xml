<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mfq.admin.web.dao.SysPermissionMapper">
	<sql id="selectsql">
		acl, role
	</sql>
	<sql id="insertsql">
		acl, role
	</sql>

	<insert id="insertOne" parameterType="SysPermission">
		insert into sys_permission(
		<include refid="insertsql" />
		)values (#{acl}, #{role}) on duplicate key update role=#{role}
	</insert>

	<select id="queryAll" resultType="SysPermission">
		select
		<include refid="selectsql" />
		from sys_permission
	</select>
	
	<select id="queryByAcls" resultType="SysPermission">
		select
		<include refid="selectsql" />
		from sys_permission where acl in 
		<foreach collection="list" open="(" separator="," close=")"
			item="id">
			#{id}
		</foreach>
	</select>
	
	<select id="queryByAcl" resultType="SysPermission">
		select
		<include refid="selectsql" />
		from sys_permission where acl=#{acl}
	</select>

	<select id="queryByRole" resultType="SysPermission">
		select
		<include refid="selectsql" />
		from sys_permission where role=#{role}
	</select>
	
	<delete id="deleteOne">
		delete from sys_permission where role=#{role} and acl=#{acl}
	</delete>
	
	<delete id="deleteByRole">
		delete from sys_permission where role=#{role}
	</delete>

	<delete id="deleteByAcl">
		delete from sys_permission where acl=#{acl}
	</delete>
	
</mapper>